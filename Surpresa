    <script>
        const CORRECT_PASSWORD = "kikita"; 
        const passwordInput = document.getElementById('passwordInput');
        const passwordScreenWrapper = document.getElementById('password-screen-wrapper');
        const mainContent = document.getElementById('mainContent');
        const errorMessage = document.getElementById('errorMessage');

        const envelopeClosed = document.getElementById('envelope-closed');
        const envelopeOpen = document.getElementById('envelope-open'); 
        const chickenImage = document.getElementById('chicken-image'); 
        const buttonContainer = document.getElementById('buttonContainer');
        const openLetterBtn = document.getElementById('openLetterBtn');
        const messageBubble = document.getElementById('message-bubble'); 

        let isEnvelopeClosedClicked = false;
        let moveInterval; 

        function checkPassword() {
            const enteredPassword = passwordInput.value.toLowerCase().trim(); 
            
            if (enteredPassword === CORRECT_PASSWORD) {
                passwordScreenWrapper.style.opacity = '0';
                setTimeout(() => {
                    passwordScreenWrapper.style.display = 'none';
                    mainContent.style.display = 'flex'; 
                    initializeEnvelope(); 
                }, 500); 
            } else {
                errorMessage.style.opacity = '1';
                passwordInput.value = ''; 
                setTimeout(() => {
                    errorMessage.style.opacity = '0';
                }, 2000);
            }
        }

        function setRandomEnvelopePosition() {
            if (isEnvelopeClosedClicked) return; 

            const maxX = window.innerWidth - envelopeClosed.offsetWidth - 20; 
            const maxY = window.innerHeight - envelopeClosed.offsetHeight - 20;

            const randomX = Math.random() * maxX;
            const randomY = Math.random() * maxY;

            envelopeClosed.style.left = `${randomX}px`;
            envelopeClosed.style.top = `${randomY}px`;
        }

        function initializeEnvelope() {
            envelopeClosed.classList.add('floating'); 
            
            setRandomEnvelopePosition();
            moveInterval = setInterval(setRandomEnvelopePosition, 3000);
            
            window.onresize = setRandomEnvelopePosition; 
            
            envelopeClosed.addEventListener('click', handleEnvelopeClosedClick);
        }

        function handleEnvelopeClosedClick() {
            if (!isEnvelopeClosedClicked) {
                isEnvelopeClicked = true; 
                clearInterval(moveInterval); 
                envelopeClosed.classList.remove('floating'); 
                envelopeClosed.classList.add('stopped'); 
                
                const finalTop = '50%';
                const finalLeft = '50%';
                const finalTransform = 'translate(-50%, -100px)';

                envelopeClosed.style.position = 'fixed';
                envelopeClosed.style.top = finalTop;
                envelopeClosed.style.left = finalLeft;
                envelopeClosed.style.transform = finalTransform;
                
                buttonContainer.style.position = 'fixed'; 
                buttonContainer.style.top = '50%';
                buttonContainer.style.left = '50%';
                buttonContainer.style.transform = 'translate(-50%, 100px)';

                buttonContainer.classList.add('show'); 
            }
        }

        openLetterBtn.addEventListener('click', () => {
            const confirmOpen = confirm("Voc√™ tem certeza que quer ver? Clique em OK para 'SIM' üòâ");

            if (confirmOpen) {
                // A√á√ÉO PARA SIM
                buttonContainer.classList.remove('show'); 
                envelopeClosed.style.opacity = '0'; 

                setTimeout(() => {
                    envelopeClosed.style.display = 'none'; 

                    envelopeOpen.style.position = 'fixed';
                    envelopeOpen.style.top = '50%';
                    envelopeOpen.style.left = '50%';
                    envelopeOpen.style.transform = 'translate(-50%, -50%)'; 
                    envelopeOpen.classList.add('show'); 

                    chickenImage.classList.add('flying');
                    chickenImage.classList.remove('hidden'); 

                    setTimeout(() => {
                        chickenImage.classList.add('blinking'); 
                        
                        setTimeout(() => {
                            messageBubble.classList.add('show'); 
                        }, 600); 

                    }, 3000); 
                    
                }, 500); 
            } else {
                // A√á√ÉO PARA N√ÉO (Cancelar)
                // Se a pessoa clicar em "Cancelar", ela ser√° redirecionada para uma p√°gina vazia,
                // simulando o fechamento ou a sa√≠da do app.
                window.location.replace("about:blank"); 
            }
        });

        passwordInput.addEventListener('keypress', function (e) {
            if (e.key === 'Enter') {
                checkPassword();
            }
        });
        
    </script>
</body>
